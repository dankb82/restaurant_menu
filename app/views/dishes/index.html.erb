<p id="notice"><%= notice %></p>

<h1>Nom Nom Shack</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Name</th>
      <th>Description</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <div class="row">
    <div class="col-md-6">
    <%= image_tag asset_url("appetizers.jpg"), id: "appetizers" %>
    <%= image_tag asset_url("entrees.jpg"), id: "entrees" %>
    <%= image_tag asset_url("dessert.jpg"), id: "dessert" %>
    <%= image_tag asset_url("adult_beverages.jpg"), id: "adult_beverages" %>
    </div>
  </div>
  <tbody>
  <div class="row">
    <div class="col-md-6">
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= number_to_currency(dish.price) %></td>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.course_id %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </div>
  </div>
  </tbody>
</table>

<br>

<%= link_to 'New Dish', new_dish_path %>
